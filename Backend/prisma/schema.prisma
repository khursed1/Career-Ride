generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model user {
  id               String        @id @default(auto()) @map("_id") @db.ObjectId
  name             String
  username         String        @unique
  password         String
  resetToken       DateTime?
  resetTokenExpiry DateTime?
  basidetails      BasicDetails?
}

model BasicDetails {
  id           String       @id @default(auto()) @map("_id") @db.ObjectId
  firstName    String
  lastName     String
  job_title    String
  address      String
  phone        String       @unique
  email        String       @unique
  prof_summery String?
  education    Education[]
  profession   Profession[]

  user    user   @relation(fields: [user_id], references: [id])
  user_id String @unique @db.ObjectId
}

model Education {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  universityName String
  degree         String
  major          String
  startDate      String
  endDate        String
  description    String

  basicdetails    BasicDetails @relation(fields: [BasicDetails_id], references: [id])
  BasicDetails_id String       @db.ObjectId
}

model Profession {
  id              String       @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  companyName     String
  city            String
  state           String
  startDate       String
  endDate         String
  workSummary     String
  basicdetails    BasicDetails @relation(fields: [BasicDetails_id], references: [id])
  BasicDetails_id String       @db.ObjectId
}
